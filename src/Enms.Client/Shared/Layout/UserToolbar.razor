@namespace Enms.Client.Shared.Layout
@using MudBlazor
@using Enms.Client.Base
@using Enms.Client.State
@inherits EnmsComponentBase

<MudToolBar Gutters="false">
  <MudContainer MaxWidth="MaxWidth.Large" Class="d-flex flex-row">
    <MudHidden Breakpoint="Breakpoint.SmAndDown">
      <MudButton
        Href="@($"/app/{Culture}")"
        Style="margin-left: -8px;"
        Class="d-flex align-center">
        <MudImage
          Src="/logo.svg"
          Alt="HelbEx"
          Style="height: 40px;" />
      </MudButton>
    </MudHidden>
    <MudHidden Breakpoint="Breakpoint.MdAndUp">
      <MudButton
        Href="@($"/app/{Culture}")"
        Style="margin-left: -12px;"
        Class="d-flex align-center">
        <MudImage
          Src="/favicon.svg"
          Alt="HelbEx"
          Style="height: 40px;" />
      </MudButton>
    </MudHidden>
    <MudSpacer />
    <div Class="d-flex flex-row justify-end">
      <MudButton
        Variant="Variant.Text"
        Color="Color.Primary"
        OnClick="e => MainLayoutState.SetLocalizationDrawerOpen(true)"
        Class="d-flex flex-row align-center">
        <MudIcon Icon="@Icons.Material.Filled.Language" />
        <MudHidden Breakpoint="Breakpoint.SmAndDown">
          <div Class="ml-2">
            <MudText>@Culture</MudText>
          </div>
        </MudHidden>
      </MudButton>
      <MudHidden Breakpoint="Breakpoint.MdAndUp">
        <MudButton
          OnClick="e => MainLayoutState.SetUserDrawerOpen(true)"
          Variant="Variant.Text"
          Color="Color.Primary"
          Class="d-flex flex-row align-center"
          Style="margin-right: -18px;">
          <MudIcon Icon="@Icons.Material.Filled.Person"/>
        </MudButton>
      </MudHidden>
      <MudHidden Breakpoint="Breakpoint.SmAndDown">
        <MudButton
          OnClick="e => MainLayoutState.SetUserDrawerOpen(true)"
          Variant="Variant.Text"
          Color="Color.Primary"
          Class="d-flex flex-row align-center"
          Style="margin-right: -8px;">
          <MudIcon Icon="@Icons.Material.Filled.Person"/>
          <div Class="ml-2 d-flex flex-column align-center">
            <MudText>
              @Translate("Welcome,")
            </MudText>
            <MudText>
              @UserState.User.User.UserName
            </MudText>
          </div>
        </MudButton>
      </MudHidden>
    </div>
  </MudContainer>
</MudToolBar>

@code {
  [CascadingParameter]
  public MainLayoutState MainLayoutState { get; set; } = default!;

  [CascadingParameter]
  public UserState UserState { get; set; } = default!;
}
