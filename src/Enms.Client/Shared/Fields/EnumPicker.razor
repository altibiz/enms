@using MudBlazor

@namespace Enms.Client.Shared.Fields

@typeparam T where T : struct, Enum

<MudSelect Label="@Label(Value)" Value="Value" ValueChanged="ValueChanged">
  @foreach (var value in Enum.GetValues<T>())
  {
    <MudSelectItem Value="value">
      @Label(value)
    </MudSelectItem>
  }
</MudSelect>

@code {
  [Parameter]
  public T Value { get; set; } = default!;

  [Parameter]
  public EventCallback<T> ValueChanged { get; set; } = default!;

  [Parameter]
  public Func<T, string> Label { get; set; } = default!;
}
