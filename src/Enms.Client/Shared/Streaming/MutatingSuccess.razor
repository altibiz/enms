@using MudBlazor
@inherits Enms.Client.Base.EnmsComponentBase

<MudDialog OnBackdropClick="NavigateBack">
  <DialogContent>
    @Translate("Success")
  </DialogContent>
  <DialogActions>
    <MudButton Color="Color.Primary" OnClick="Submit">
      @Translate("Ok")
    </MudButton>
  </DialogActions>
</MudDialog>

@code {

  [CascadingParameter]
  MudDialogInstance MudDialog { get; set; } = default!;

  void Submit()
  {
    NavigateBack();
    MudDialog.Close(DialogResult.Ok(true));
  }
}
