@using MudBlazor

<MudDialog>
  <DialogContent>
    Failure
  </DialogContent>
  <DialogActions>
    <MudButton Color="Color.Primary" OnClick="Submit">
      Ok
    </MudButton>
  </DialogActions>
</MudDialog>

@code {
  [CascadingParameter]
  MudDialogInstance MudDialog { get; set; } = default!;

  void Submit()
  {
    MudDialog.Close(DialogResult.Ok(true));
  }
}
